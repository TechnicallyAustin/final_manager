<h1><%=@group.name%> Group</h1>
<br />

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h3 class="card-title"><%=link_to "#{@group.name}", group_path(@group)%></h3>
    <h6 class="card-subtitle mb-2 text-muted"><%=@group.description%></h6>
    <p class="card-text">Number of Tasks: <%=@group.tasks.count%></p>
  </div>
</div>
